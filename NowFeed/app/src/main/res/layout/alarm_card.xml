<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/Card_View"
android:layout_gravity="center"
android:layout_width="match_parent"
android:layout_height="400dp"
card_view:cardCornerRadius="1dp">

<!--todo: fix layout UI  -->

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:text="Set Alarm: "
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- might not be necessary unless timepicker is moved to dialog box -->
    <Button
        android:id="@+id/select_time_button"
        android:text="select time"
        android:visibility="invisible"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!-- might remove since it shows only military time -->
    <TextView
        android:id="@+id/select_time_text_view"
        android:text="Select time: 12:00 AM"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/set_alarm_button"
        android:text="set alarm"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!--todo: create image button with clock to view alarms -->
    <Button
        android:id="@+id/view_alarms_button"
        android:text="View Alarms"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <!--displays next upcoming alarm -->
    <TextView
        android:id="@+id/alarms_text_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />


    <!-- might not need listView if only next alarm will show -->
    <ListView
        android:id="@+id/alarms_list_view"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

</android.support.v7.widget.CardView>